{
  "name": "taskfalcon",
  "displayName": "TaskFalcon",
  "description": "Integration of the TaskFalcon project planner",
  "version": "0.8.2",
  "publisher": "taskfalcon",
  "repository": {
    "type": "git",
    "url": "https://github.com/avirillion/vscode-taskfalcon"
  },
  "icon": "resources/taskfalcon-icon.png",
  "preview": true,
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other",
    "Visualization",
    "Snippets",
    "Linters"
  ],
  "keywords": [
    "taskfalcon",
    "planning",
    "scheduler",
    "project",
    "management"
  ],
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ],
  "activationEvents": [
    "onView:falcon-project"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "taskfalcon",
          "title": "TaskFalcon",
          "icon": "resources/taskfalcon-view.svg"
        }
      ]
    },
    "views": {
      "taskfalcon": [
        {
          "id": "falcon-project",
          "name": "TaskFalcon Project",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "code": "vsce package --githubBranch main"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1"
  },
  "dependencies": {
    "handlebars": "^4.7.6",
    "yaml": "^1.10.0"
  }
}
